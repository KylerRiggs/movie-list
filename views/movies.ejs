<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My List | MoviePass</title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body class="bg-neutral-900 text-white text-center">
    <header class="py-6 px-12 bg-neutral-700">
      <nav class="flex justify-center md:justify-around items-center">
        <ul class="flex">
          <li>
            <a
              href="/changelog"
              class="p-2 hover:text-teal-400 hover:transition-color hover:duration-300 motion-reduce:hover:transition-none"
              >Changelog</a
            >
          </li>
        </ul>
        <ul class="flex">
          <li>
            <a
              href="/logout"
              class="p-2 hover:text-teal-400 hover:transition-color hover:duration-300 motion-reduce:hover:transition-none"
              >Log Out</a
            >
          </li>
        </ul>
      </nav>
    </header>

    <h1 class="text-teal-400 text-2xl md:text-5xl mt-6 md:mt-12">My List</h1>

    <%- include('partials/searchmovies') -%>

    <main
      class="moviesList flex justify-center items-center mb-12 px-6 md:px-0"
    >
      <ul class="text-left px-6">
        <% movies.forEach( movie => { %>
        <li class="movieName list-disc my-2" data-id="<%=movie._id%>">
          <a
            href="/movies/search?movieName=<%= movie.movieTitle %>"
            class="underline"
            ><%=movie.movieTitle%> <% if (movie.movieYear != -1) { %>
            (<%=movie.movieYear%>)<% } %></a
          >
          <form
            action="/movies/deleteMovie/<%= movie.id %>?_method=DELETE"
            method="post"
            class="inline"
          >
            <button class="align-middle px-2 py-1 md:px-1">
              <iconify-icon
                inline
                icon="ci:trash-full"
                class="text-xl md:text-2xl"
                aria-label="remove movie from list"
              ></iconify-icon>
            </button>
          </form>
        </li>
        <% }) %>
      </ul>
    </main>
    <script src="https://code.iconify.design/iconify-icon/1.0.0/iconify-icon.min.js"></script>
  </body>
</html>
