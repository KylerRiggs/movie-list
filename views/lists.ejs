<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My List | MoviePass</title>
    <link rel="stylesheet" href="../css/style.css" />
  </head>
  <body class="text-center">
    <%- include('partials/nav') %>

    <h1
      class="mt-6 text-2xl tracking-tighter text-primary md:mt-12 md:text-5xl"
    >
      My Lists
    </h1>
    <div class="mt-6 flex items-center justify-center">
      <form action="/lists/createList" method="post" class="form-control">
        <!-- <label class="label self-center" for="listTitle">
          <span class="label-text ">Create a New List</span>
        </label> -->
        <label class="input-group mt-2">
          <span>New List</span>
          <input
            type="text"
            required
            name="listTitle"
            placeholder="List Name"
            class="input input-bordered"
            maxlength="80"
          />
        </label>
        <input type="submit" value="Create" class="btn btn-outline mt-2" />
      </form>
    </div>

    <main
      class="moviesList mt-12 mb-12 flex items-center justify-center px-6 md:px-0"
    >
      <ul class="px-6 text-left">
        <% lists.forEach( list => { %>
        <li class="listName my-2 list-disc" data-id="<%=list._id%>">
          <a href="/lists/<%= list.id %>" class="link-hover"
            ><%=list.listTitle%></a
          >

          <form
            action="/lists/deleteList/<%= list.id %>?_method=DELETE"
            method="post"
            class="inline"
          >
            <button class="align-middle">
              <iconify-icon
                inline
                icon="ci:trash-full"
                class="hover:transition-color hover:text-primary-hover text-xl hover:duration-300 active:text-primary active:transition-colors active:duration-300 motion-reduce:hover:transition-none md:text-2xl"
                aria-label="remove movie from list"
                onclick="
                return confirm('Are you sure you want to delete this list?')"
              ></iconify-icon>
            </button>
          </form>
        </li>
        <% }) %>
      </ul>
    </main>
    <script src="https://code.iconify.design/iconify-icon/1.0.0/iconify-icon.min.js"></script>
  </body>
</html>
