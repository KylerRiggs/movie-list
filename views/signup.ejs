<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up | MoviePass</title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body class="bg-neutral-900 text-white text-center">
    <h1 class="text-teal-400 text-2xl md:text-5xl mt-6 md:mt-12">
      <a
        href="/"
        class="hover:text-teal-100 hover:transition-color hover:duration-300 motion-reduce:hover:transition-none"
        >MoviePass</a
      >
      | Sign Up
    </h1>
    <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
    <div class="alert alert-danger"><%= el.msg %></div>
    <% }) %> <% } %>

    <form
      action="/signup"
      method="POST"
      class="flex flex-col justify-center items-center mt-12"
    >
      <label for="userName">User Name: </label>
      <input
        type="text"
        name="userName"
        placeholder="Username"
        class="py-2 px-4 text-neutral-900 rounded-2xl"
      />
      <label for="email" class="mt-6">Email: </label>
      <input
        type="email"
        name="email"
        placeholder="you@example.com"
        class="py-2 px-4 text-neutral-900 rounded-2xl"
      />
      <label for="password" class="mt-6"
        >Password (8 characters minimum):
      </label>
      <input
        type="password"
        name="password"
        placeholder="Password"
        class="py-2 px-4 text-neutral-900 rounded-2xl"
      />
      <label for="confirmPassword" class="mt-6">Confirm Password: </label>
      <input
        type="password"
        name="confirmPassword"
        placeholder="Confirm Password"
        class="py-2 px-4 text-neutral-900 rounded-2xl"
      />
      <input
        type="submit"
        class="bg-neutral-700 my-4 py-2 px-4 rounded-2xl hover:bg-neutral-600 active:bg-neutral-800 hover:transition-color active:transition-color duration-300 motion-reduce:transition-none"
      />
    </form>

    <%- include('partials/fixedfooter') -%>
  </body>
</html>
